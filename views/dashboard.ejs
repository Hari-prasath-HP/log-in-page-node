<%- include('header') -%>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --accent-color: #8e44ad;
        --text-dark: #2c3e50;
        --text-light: #ecf0f1;
    }

    body {
        background: var(--secondary-gradient);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
    }

    .dashboard-container {
        perspective: 1000px;
    }

    .dashboard-box {
        background: white;
        padding: 3rem 2.5rem;
        border-radius: 25px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 420px;
        text-align: center;
        transform-style: preserve-3d;
        transition: all 0.5s ease;
        position: relative;
        overflow: hidden;
    }

    .dashboard-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 8px;
        background: var(--primary-gradient);
    }

    .dashboard-box:hover {
        transform: translateY(-5px) rotateX(5deg);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
    }

    .user-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: var(--primary-gradient);
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .dashboard-box h3 {
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 10px;
        font-size: 1.8rem;
    }

    .dashboard-box h5 {
        color: var(--accent-color);
        font-size: 1.1rem;
        margin-bottom: 30px;
        font-weight: 500;
    }

    .welcome-text {
        color: #7f8c8d;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .btn-logout {
        background: var(--primary-gradient);
        border: none;
        border-radius: 50px;
        padding: 12px 35px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        position: relative;
        overflow: hidden;
    }

    .btn-logout:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.6);
    }

    .btn-logout:active {
        transform: translateY(1px);
    }

    .btn-logout::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
    }

    .btn-logout:hover::before {
        left: 100%;
    }

    .stats-container {
        display: flex;
        justify-content: space-around;
        margin: 30px 0;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--accent-color);
    }

    .stat-label {
        font-size: 0.8rem;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }

    .floating-icon {
        position: absolute;
        opacity: 0.1;
        z-index: 0;
    }

    .floating-icon:nth-child(1) {
        top: 20px;
        right: 30px;
        font-size: 3rem;
        animation: float 6s ease-in-out infinite;
    }

    .floating-icon:nth-child(2) {
        bottom: 40px;
        left: 30px;
        font-size: 2.5rem;
        animation: float 7s ease-in-out infinite;
        animation-delay: 1s;
    }

    @media (max-width: 480px) {
        .dashboard-box {
            padding: 2rem 1.5rem;
        }
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-box">
        <i class="floating-icon">âš¡</i>
        <i class="floating-icon">ðŸ‘‹</i>
        
        <div class="user-avatar">
            <%= locals.user ? user.charAt(0).toUpperCase() : "U" %>
        </div>
        
        <h3>Welcome back!</h3>
        <h5><%= locals.user ? user : "Guest User" %></h5>
        
        <p class="welcome-text">
            You're now accessing your personalized dashboard. Manage your account and explore all features.
        </p>
        
        <div class="stats-container">
            <div class="stat-item">
                <div class="stat-value">24</div>
                <div class="stat-label">Projects</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">89%</div>
                <div class="stat-label">Success</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">12</div>
                <div class="stat-label">Tasks</div>
            </div>
        </div>
        
        <form action="/logOut" method="post">
            <button type="submit" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<%- include('footer') -%>